</Layout>


<style>
  .render-container {
    position: relative;
  }

  .image-container {
    position: relative;
  }

  .render-image, .wireframe-image {
    max-width: 100%;
    transition: 0.5s ease-in-out;
  }

  .wireframe-image {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
  }

  .image-container:hover .wireframe-image {
    opacity: 1;
    transform: scale(1.1);
  }
</style>
 