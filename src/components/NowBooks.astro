---
// Import the JSON data and the date prop
import nowBooksData from '../lib/now_books.json'
const booksDate = Astro.props.booksDate

const booksForSelectedDate = nowBooksData[booksDate] || []

console.log('Selected Date:', booksDate)
console.log('Books for Selected Date:', booksForSelectedDate)

// Access the books array
---

<div>
	<div class="mb-12 flex flex-col">
		<hr class="my-8" />
		<h3 class="mb-8">Currently reading:</h3>
		{
			booksForSelectedDate.map((book) => (
				<div key={book.isbn} class="mb-12 flex items-center">
					<img
						src={book.coverURL}
						alt={`${book.title} Book Cover`}
						class="mr-8 h-auto w-32 rounded-sm shadow-lg"
					/>
					<div>
						<p class="text-2xl font-bold text-dark-text">{book.title}</p>
						<p>by {book.authors}</p>
					</div>
				</div>
			))
		}
	</div>
</div>
