---
import NowBooks from '../components/NowBooks.astro'
const booksDate = Astro.props.date
const colSpan = Astro.props.colSpan || 'lg:col-span-6' // Set default col-span value

// Function to format date from YYYY-MM-DD to D.M.YYYY
function formatDate(dateString) {
	const date = new Date(dateString)
	return `${date.getDate()}.${date.getMonth() + 1}.${date.getFullYear()}`
}

const formattedDate = formatDate(booksDate)
---

<div class={`${colSpan} flex flex-col `}>
	<div
		class="long-transition border-gradient mb-8 flex flex-col rounded-lg bg-white from-dark-card to-darker-card p-6 text-gray-400 shadow-lg dark:bg-gradient-to-r dark:text-white sm:p-12 sm:text-lg"
	>
		<h1 class="long-transition text-center font-header text-7xl xl:text-9xl">{formattedDate}</h1>
	</div>

	<div
		class="long-transition border-gradient mb-24 flex flex-col rounded-lg bg-white from-dark-card to-darker-card p-6 text-gray-400 shadow-lg dark:bg-gradient-to-r dark:text-white sm:p-12 sm:text-lg md:p-24"
	>
		<slot />
		<NowBooks booksDate={booksDate} />
	</div>
</div>
